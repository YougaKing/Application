<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="AppTheme.WindowTranslucentStatus">

    </style>

    <!-- ToolBar样式.-->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--menu字体颜色-->
        <item name="actionMenuTextColor">@color/cn_textview_normal_color</item>
        <!--menu字体大小-->
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
        <!--修改菜单栏右边三个白点图标-->
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
        <!--menu 按钮间距-->
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <!--navigationIcon间距-->
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <!--Menu item 高度 这里不需要指定style 可直接指定-->
        <item name="android:listPreferredItemHeightSmall">@dimen/dp_40</item>
        <item name="android:listPreferredItemHeightLarge">@dimen/dp_40</item>
        <!-- 分隔线 -->
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <!-- ToolBar 弹出menu样式.-->
    <style name="Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--menu窗口背景-->
        <item name="android:background">@color/cn_white_base_color</item>
        <!--menu字体颜色-->
        <item name="android:textColor">@color/cn_textview_normal_color</item>
        <!--menu字体大小-->
        <item name="android:textSize">@dimen/dp_13</item>
        <!--menu窗口位置-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!-- Toolbar 标题样式 -->
    <style name="Toolbar.TitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cn_textview_theme_color</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">@dimen/dp_0</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">@dimen/dp_0</item>
        <!--<item name="android:shadowColor">@android:color/darker_gray</item>-->
    </style>

    <!--修改菜单栏右边三个白点图标-->
    <style name="ActionOverflowButtonStyle" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu_more_black</item>
        <item name="android:minWidth">@dimen/icon_default_width</item>
        <item name="android:width">@dimen/icon_default_width</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ActionMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">@dimen/dp_13</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minWidth">@dimen/icon_default_width</item>
        <item name="android:width">@dimen/icon_default_width</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/icon_default_width</item>
        <item name="android:width">@dimen/icon_default_width</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 分隔线 -->
    <style name="DropDownListViewStyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/cn_yoga_base_line_color</item>
        <item name="android:dividerHeight">@dimen/dp_0_5</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
        <item name="navigationIcon">@drawable/icon_menu_back_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 通过改变colorPrimary 的颜色,toolbar的背景色就是colorPrimary颜色 -->
        <item name="colorPrimary">@color/cn_white_base_color</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="elevation">@dimen/dp_0</item>
    </style>
</resources>
